<Page x:Class="UML.Pages.OnBoardingLoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="850" Width="1560" 
        Background="Transparent" 
        xmlns:mp="http://schemas.mpcoding.com/mpcoding/wpf/loadinganimation"
        Loaded="OnBoardingLoadingScreen_Loaded">
    <Grid Background="Transparent">
        <TextBlock Text="Loading" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="pack://application:,,,/src/Fonts/#Brutal Type" FontWeight="Medium" Foreground="White" FontSize="24" Margin="0,0,0,0"/>

        <Viewbox Width="45" Height="10" Margin="0,70,0,0">
            <mp:ThreeDotsAnimation Color="White" Duration="0:0:0.8"/>
        </Viewbox>
        
        <Border>
            <Rectangle x:Name="BlackOverlay" Fill="Black" Opacity="1" />
        </Border>
    </Grid>
</Page>
