<Page x:Class="UML.Pages.MorePages.OnBoardingLoad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UML.Pages.MorePages"
      mc:Ignorable="d" 
      xmlns:mp="http://schemas.mpcoding.com/mpcoding/wpf/loadinganimation"
      Height="850" Width="1560" 
      Title="OnBoardingLoad">

    <Grid Background="Transparent">
        <TextBlock Text="Loading" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="pack://application:,,,/src/Fonts/#Brutal Type" FontWeight="Medium" Foreground="White" FontSize="24" Margin="0,0,0,0"/>

        <Viewbox Width="45" Height="10" Margin="0,70,0,0">
            <mp:ThreeDotsAnimation Color="White" Duration="0:0:0.8"/>
        </Viewbox>
    </Grid>
</Page>
